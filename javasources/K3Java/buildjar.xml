<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="jar" name="Create Runnable Jar for Project K2Java">
	<target name="jar">
		<delete file="../../dist/bin/java/k3.jar" failonerror="false" />
		<jar destfile="../../dist/bin/java/k3.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="main.Main"/>
				<attribute name="Class-Path" value=". strategoxt.jar"/>
				<attribute name="Class-Path" value=". xstream.jar"/>
				<attribute name="Class-Path" value=". kxml2-min.jar"/>
			</manifest>
			<fileset dir="./bin"/>
			<!--<zipfileset excludes="META-INF/*.SF" src="./lib/strategoxt.jar"/> -->
			<zipfileset excludes="META-INF/*.SF" src="./lib/commons-cli-1.2-javadoc.jar"/>
			<zipfileset excludes="META-INF/*.SF" src="./lib/commons-cli-1.2-sources.jar"/>
			<zipfileset excludes="META-INF/*.SF" src="./lib/commons-cli-1.2.jar"/>
			<fileset dir="../JavaClasses/bin"/>
			<fileset dir="../KUtils/bin"/>
			<fileset dir="../KPreprocessor/bin"/>
		</jar>
	</target>
</project>
