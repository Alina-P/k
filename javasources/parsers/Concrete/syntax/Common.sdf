module Common

exports
lexical syntax
	[\ \t\n\r] -> LAYOUT

	[\*]                             -> CommentChar
	"/*" (~[\*] | CommentChar)* "*/" -> LAYOUT
	"//" ~[\n\r]* ([\n\r] | EOF)     -> LAYOUT

	-> EOF

	%% Variables and the Anonymous Variable
	"$"?[A-Z] [a-zA-Z0-9\']*  -> VARID
	"_" -> VARID
	"HOLE" -> VARID {reject}

lexical restrictions
	%% Ensure greedy matching for lexicals
	CommentChar   -/- [\/]

	%% EOF may not be followed by any char
	EOF           -/- ~[]

	VARID -/- [a-zA-Z0-9\']

context-free restrictions
	%% Ensure greedy matching for comments
	LAYOUT? -/- [\ \t\n\r]
	LAYOUT? -/- [\/].[\/]
	LAYOUT? -/- [\/].[\*]


