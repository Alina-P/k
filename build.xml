<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="K3 Build file">

	<property location="javasources" name="javasources" />

	<target name="java">
		<ant antfile="${javasources}/K3Java/buildjava.xml" dir="${javasources}/K3Java" />
		<ant antfile="${javasources}/JKRun/build.xml" dir="${javasources}/JKRun" />
	</target>

	<target name="jar">
		<ant antfile="${javasources}/K3Java/buildjar.xml" dir="${javasources}/K3Java" />
	</target>

	<target name="build">
		<ant antfile="${javasources}/K3Java/build.xml" dir="${javasources}/K3Java" />
	</target>

	<target name="clean">
		<delete>
			<fileset dir="${javasources}/K3Java/src/k2parser/lib">
				<include name="*.java" />
				<include name="K3Syntax.tbl" />
				<exclude name="xml_string_escape_from_string_0_0.java" />
			</fileset>
		</delete>
		<delete file="${javasources}/K3Syntax/trans/K2Str.rtree" />
		<delete file="${javasources}/K3Syntax/trans/K2Str.dep" />
		<delete dir="${javasources}/K3Syntax/trans/K2Str" />
		<delete dir="${javasources}/K3Syntax/include" />

		<delete>
			<fileset dir="${javasources}/K3Java/src/k3parser/lib">
				<include name="*.java" />
				<exclude name="string_trim_last_one_0_0.java" />
				<exclude name="string_unescape_sort_0_0.java" />
				<exclude name="annolocation_0_0.java" />
				<exclude name="annolocationremove_0_0.java" />
				<exclude name="clear_console_0_0.java" />
				<exclude name="mergeamb_0_0.java" />
				<exclude name="xml_string_escape_from_string_0_0.java" />
			</fileset>
		</delete>
		<delete file="${javasources}/K3Disamb/trans/K3Str.rtree" />
		<delete file="${javasources}/K3Disamb/trans/K3Str.dep" />
		<delete dir="${javasources}/K3Disamb/trans/K3Str" />
		<delete dir="${javasources}/K3Disamb/include" />

		<delete file="${javasources}/LatexComments/trans/K3Str.rtree" />
		<delete file="${javasources}/LatexComments/trans/K3Str.dep" />
		<delete dir="${javasources}/LatexComments/trans/K3Str" />
		<delete dir="${javasources}/LatexComments/include" />


		<delete dir="${javasources}/K3Java/bin" />
		<delete dir="${javasources}/JKRun/bin" />
		<delete dir="${javasources}/KUtils/bin" />
		<delete dir="${javasources}/KPreprocessor/bin" />
		<delete dir="${javasources}/IOServer/bin" />
		<delete dir="${javasources}/JavaClasses/bin" />

		<delete file="${javasources}/../dist/bin/java/k3.jar" />
		<delete dir="./k/" />
	</target>

	<target name="release">
		<antcall target="build" />
		<delete dir="./k/" />
		<exec command="svn export dist k" failonerror="true" />
		<copy file="./dist/bin/java/k3.jar" todir="./k/bin/java/" />

		<property name="version.file" value="./k/bin/version.txt" />

		<exec executable="svn" output="${version.file}">
			<arg value="info" />
			<arg value="--xml" />
		</exec>

		<xmlproperty file="${version.file}" />

		<tstamp>
			<format property="date" pattern="EEE MMM d HH:mm:ss z yyyy" />
		</tstamp>

		<property name="version" value="latest" />
		<condition property="k-version" value="nigthly build">
			<equals arg1="${version}" arg2="latest" />
		</condition>
		<condition property="k-version" value="version ${version}">
			<not>
				<equals arg1="${version}" arg2="latest" />
			</not>
		</condition>
		<echo message="K-framework ${k-version}.${line.separator}" file="${version.file}" />
		<echo message="SVN Revision: ${info.entry(revision)}${line.separator}" file="${version.file}" append="true" />
		<echo message="Build date: ${date}${line.separator}" file="${version.file}" append="true" />

		<delete file="k-${version}.zip" />
		<delete file="k-${version}.tgz" />
		<zip destfile="k-${version}.zip" basedir="k" />
		<tar destfile="k-${version}.tgz" basedir="k" compression="gzip" />
	</target>

	<target name="options">
		<property name="version" value="latest" />
		<echo message="${version}" />
	</target>


	<target name="test">
		<javac srcdir="./tests/tools/Jenkins/src" includeantruntime="false" />
		<javac srcdir="./tests/tools/Jenkins/tests" classpath="tests/tools/Jenkins/lib/junit-4.10.jar:tests/tools/Jenkins/src" includeantruntime="false" />
		<java classname="org.junit.runner.JUnitCore" classpath="tests/tools/Jenkins/lib/junit-4.10.jar:tests/tools/Jenkins/src:tests/tools/Jenkins/tests">
			<arg value="LocalTests" />
		</java>
	</target>


</project>
