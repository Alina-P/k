var n, m;

function collatz() {
  var s=0;
  print("Testing Collatz' conjecture for n = ",n," ... ");
  while n > 1 do {
    s = s+1;
    if n == (n/2)*2
    then n = n/2;
    else n = 3*n+1;
  }
  print("Done! It took ",s," steps.\n");
}

function main() {
  print("Testing Collatz' conjecture up to what number? ");
  m = read();
  for i = 1 to m do {
    n = i;
    collatz();
  }
  print("Done.  It appears to hold.\n");
}
