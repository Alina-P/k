require substitution

module LAMBDA imports SUBSTITUTION
  syntax KResult ::= #Id 
                   | \ #Id "." K        [: prec 100 latex "\lambda{#1}.{#2}" :]
  syntax K ::= K K                      [:strict prec 0 gather (E e):]

---Function application (through beta-substitution)
  rule <k> (\ X:#Id . E:K) V:KResult => E[V / X] ...</k>
  rule isBinder(\X.E) => true
end module
